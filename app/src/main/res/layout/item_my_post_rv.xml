<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:id="@+id/item_myPage_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_myPage_item_postId"
            android:text="글번호"
            android:gravity="center"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"></TextView>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_myPage_item_message"
            android:text="내용"
            android:textSize="30dp"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="50dp"></TextView>


    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_myPage_item_leaf"
            android:src="@drawable/leaf_toy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_myPage_item_createdAt"
            android:text="createdAt"
            android:textSize="30dp"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="50dp"/>


    </LinearLayout>



</LinearLayout>
